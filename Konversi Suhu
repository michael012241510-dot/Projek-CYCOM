print("konversi suhu")
suhu = int(input("masukan suhu dalam celcius: "))
print(f" {suhu} 째C")
konversi = input("masukan konversi : ")
if konversi == "kelvin" :
  hasil = suhu + 273.15
  print(f"{hasil} 째K")
elif konversi == "farenheit" :
  hasil = suhu*9/5 + 32
  print(f"{hasil} 째F")
elif konversi == "reamur" :
  hasil = suhu*4/5
  print(f" {hasil} 째R")
else :
  print("koversi tidak dapat diselesaikan")
